menu "Build"

config BUILD__DIRS__SOURCE
    string "Source Directory"
    default "docs"

config BUILD__DIRS__BUILD
    string "Build Directory"
    default "out/docs"

config BUILD__PORTS__HTML__LIVE
    int "Port for live preview of HTML build"
    default 1976

endmenu
